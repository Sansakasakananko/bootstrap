<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1><%= t('.title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <!-- 修正点 1 -->
      <th><%= User.human_attribute_name('name') %></th> <!-- 修正: '<User.human_attribute_name('name') %>' を '<%= User.human_attribute_name('name') %>' に変更 -->
      <!-- 修正点 2 -->
      <th><%= User.human_attribute_name('phone_number') %></th> <!-- 修正: '<User.human_attribute_name('phone_number')' を '<%= User.human_attribute_name('phone_number') %>' に変更 -->
      <!-- 修正点 3 -->
      <th colspan="3"></th> <!-- 修正: 'colspan="3"' を '<th colspan="3">' に修正 -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.phone_number %></td>
        <!-- 修正点 4 -->
        <td><%= link_to t('.show'), user %></td> <!-- 修正: 't('Show')' を 't('.show')' に変更 -->
        <td><%= link_to t('.edit'), edit_user_path(user) %></td> <!-- 修正: 't('Edit')' を 't('.edit')' に変更 -->
        <td><%= link_to t('.destroy'), user, data: { "turbo-method": :delete, "turbo-confirm": "本当に削除しますか？" } %></td> <!-- 修正: 't('Destroy')' を 't('.destroy')' に変更 -->
      </tr>
    <% end %>
  </tbody>
</table>

